* {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}

/* ===Primary=== */

body {
  background-color: #FFFCFC;
  font-family: 'Karla', sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.6;
  color: #000;
}

/* -- inline elements -- */

.span__web-developer {
  padding: 5px;
  border-radius: 5px;
  font-family: monospace;
  color: #FFFCFC;
  background-color: #F87060
}

/* --divs-- */

div {
  padding: 10px;
  margin: 10px;
}

/* ==Header==*/

.page-header {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  padding: 20px;
}

.page-header__item {
  -webkit-box-flex: 0;
      -ms-flex: 0 1 200px;
          flex: 0 1 200px;
}

.page-header__item:last-child {
  -webkit-box-flex: 1;
      -ms-flex-positive: 1;
          flex-grow: 1;
  text-align: right;
}

/* --Navigation--*/

.navigation-list__link--active {
  text-decoration: none;
}

.navigation-list {
  list-style-type: none;
}

.navigation-list li {
  display: inline-block;
  margin-left: 15px;
}

/* --Footer--*/

.page-footer{
  clear: both;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
  text-align: center;
}

/* --headings--*/

h1{
  font-family: 'Rubik', sans-serif;
  font-weight: 700;
  color: #074f57;
}

h2{
  font-family: 'Rubik', sans-serif;
  font-weight: 700;
  color: #074f57;
}

h3{
  font-family: 'Rubik', sans-serif;
  font-weight: 700;
  color: #074f57;
}

/*--links--*/

a {
  color: #0b7e8b;
}

a:visited {
  color: #33658A;
}

a:hover, a:focus {
  /*no underlining when hovering over a link */
  text-decoration: none;
}

a:active {
  color:#0b7e8b;
}

/*--Buttons--*/

button {
  border: none;
  display: inline-block;
  font-family: inherit;
  background-color: #33658A;
  color: white;
  text-decoration: none;
  padding: 10px;
  border-radius: 3px;
  border-bottom: 2px solid rgba(0, 0, 0, 0.3);
  -webkit-transition: 0.2s opacity;
  -o-transition: 0.2s opacity;
  transition: 0.2s opacity;
}

.button {
  border: none;
  display: inline-block;
  font-family: inherit;
  background-color: #33658A;
  color: white;
  text-decoration: none;
  padding: 10px;
  border-radius: 3px;
  border-bottom: 2px solid rgba(0, 0, 0, 0.3);
  -webkit-transition: 0.2s opacity;
  -o-transition: 0.2s opacity;
  transition: 0.2s opacity;
}

.button:visited {
  border: none;
  display: inline-block;
  font-family: inherit;
  background-color: #33658A;
  color: white;
  text-decoration: none;
  padding: 10px;
  border-radius: 3px;
  border-bottom: 2px solid rgba(0, 0, 0, 0.3);
  -webkit-transition: 0.2s opacity;
  -o-transition: 0.2s opacity;
  transition: 0.2s opacity;
}

button:hover, button:focus, .button:hover, .button:focus {
  cursor: pointer;
  opacity: 0.8;
}

.button_secondary {
  background-color: #51344D;
  color: white;
}

input, texture, select, button {
  font-family: inherit;
}

/* --Index Page */

.profile {
  max-width: 700px;
  margin: 0 auto;
}

.profile__portrait{
  float: left;
  width: 250px;
  height: auto;
  margin-right: 40px;
  border-radius: 50%
}

.profile__text {
  -webkit-box-flex:1;
      -ms-flex:1 1 100px;
          flex:1 1 100px;
}

/* --About Page--*/

.about__text, .contact__text, .boston-animation {
  max-width: 700px;
  margin: 0 auto;
  padding-left: 10px;
}

/*--Contact Page--*/

#contact-form {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
  max-width: 400px;
  padding-top: 50px
}

/* --Work Page-- */

/* Grid Fallback */

.grid__item {
  display: inline-block;
  Width: 33%
}

/* CSS Grid Styling */

.grid {
  display: -ms-grid;
  display: grid;
  -ms-grid-columns:1fr 15px 1fr 15px 1fr;
  grid-template-columns:1fr 1fr 1fr;
  grid-gap: 15px;
}

.grid__item {
  background-color: rgba(51, 101, 138, 0.2);
  border-radius: 10px;
  padding: 10px;
  width: auto
}

.grid__item:last-child {
  -ms-grid-column: 3;
  grid-column: 3/3;
  -ms-grid-row: 1;
  -ms-grid-row-span: 2;
  grid-row: 1/3
}

#long-box{
  -ms-grid-column: 1;
  -ms-grid-column-span: 3;
  grid-column: 1/4;
  -ms-grid-row: 3;
  grid-row: 3/3
}

/* Media Queries */

@media all and (max-width: 500px) {
  .grid {
    -ms-grid-columns: 1fr;
    grid-template-columns: 1fr;
  }
}

@media all and (min-width: 500px) and (max-width: 750px) {
  .grid {
    -ms-grid-columns: 1fr 15px 1fr;
    grid-template-columns: 1fr 1fr;
  }
}

@media all and (max-width: 750px){
  /* shared code*/
  .grid {
    grid-gap: 10px;
  }
  .grid__item:last-child {
    grid-column: auto / auto;
    grid-row: auto / auto;
  }
  #long-box {
    grid-column: auto / auto;
    grid-row: auto / auto;
  }
  h1 {
    font-size: 22px;
  }
}

